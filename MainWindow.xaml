<Window x:Class="Explorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Древовидная модель" Width="900" Height="500"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <!-- Рабочий Watermark -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="WatermarkText"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="#777"
                                       Margin="4,2,0,0"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="WatermarkText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="WatermarkText" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="6"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- TREE -->
        <Border BorderBrush="#CCC" BorderThickness="1" Padding="8">
            <TreeView x:Name="Tree" FontSize="14"/>
        </Border>

        <GridSplitter Grid.Column="1"
                      Width="6"
                      HorizontalAlignment="Center"
                      Background="#DDD"/>

        <!-- RIGHT PANEL -->
        <StackPanel Grid.Column="2" Margin="10">

            <!-- ROOT -->
            <TextBlock Text="Корневой объект" FontWeight="Bold"/>

            <TextBox x:Name="TextBoxRoot"
                     Style="{StaticResource WatermarkTextBox}"
                     Tag="Название корня"
                     Height="28"
                     Margin="0 4 0 8"/>

            <Button x:Name="ButtonSetRoot"
                    Content="Создать корень"
                    Click="ButtonSetRoot_Click"
                    Height="32"
                    Margin="0 0 0 12"/>

            <Separator Margin="0 10 0 10"/>

            <!-- ADD -->
            <TextBlock Text="Добавить объект" FontWeight="Bold"/>

            <TextBox x:Name="TextBoxParent"
                     Style="{StaticResource WatermarkTextBox}"
                     Tag="Имя родителя"
                     Height="28"
                     Margin="0 4 0 6"/>

            <TextBox x:Name="TextBoxChild"
                     Style="{StaticResource WatermarkTextBox}"
                     Tag="Название дочернего"
                     Height="28"
                     Margin="0 0 0 6"/>

            <Button x:Name="ButtonAdd"
                    Content="Добавить"
                    Click="ButtonAdd_Click"
                    Height="32"
                    Margin="0 0 0 12"/>

            <Separator Margin="0 10 0 10"/>

            <!-- DELETE -->
            <TextBlock Text="Удаление" FontWeight="Bold"/>

            <Button x:Name="ButtonDelete"
                    Content="Удалить выбранный"
                    Click="ButtonDelete_Click"
                    Height="32"/>
        </StackPanel>
    </Grid>
</Window>
