<Window x:Class="Explorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Explorer"
        mc:Ignorable="d"
        Title="Проводник" Height="450" Width="800" MinWidth="800" MinHeight="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="633*" />
            <ColumnDefinition Width="Auto" MinWidth="4" />
            <ColumnDefinition Width="163*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="2">
            <Button x:Name="Button_Add" Content="Добавить" HorizontalAlignment="Left" Margin="10,131,0,0" VerticalAlignment="Top" Width="143" IsEnabled="False" Height="20" Click="Button_Add_Click"/>
            <TextBox x:Name="TextBox_Object" HorizontalAlignment="Left" Margin="10,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143" Height="20" TextChanged="TextBox_Object_TextChanged"/>
            <Label Content="Корневой объект" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="TextBox_Object_Копировать" Margin="103,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" HorizontalAlignment="Left" Width="50"/>
            <Label Content="Количество" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <Button x:Name="Button_Delete" Content="Удалить" HorizontalAlignment="Center" Margin="0,404,0,0" VerticalAlignment="Top" Width="143" IsEnabled="False" Height="20"/>
        </Grid>
        <Grid>
            <TreeView Margin="10,10,10,10"/>
        </Grid>
        <GridSplitter Grid.Column="1" ShowsPreview="False" Width="4"
        HorizontalAlignment="Center" />
    </Grid>
</Window>
