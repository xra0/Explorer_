<Window x:Class="Explorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Древовидная модель" Width="900" Height="500"
        MinWidth="800" MinHeight="450"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <!-- Watermark Style -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>

                            <TextBlock x:Name="WatermarkText"
                                   Text="{TemplateBinding Tag}"
                                   Foreground="#777"
                                   Margin="4,2,0,0"
                                   IsHitTestVisible="False"
                                   Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="WatermarkText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="WatermarkText" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="6"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- ЛЕВАЯ ПАНЕЛЬ — ДЕРЕВО -->
        <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="4" Padding="8">
            <TreeView x:Name="Tree"
                      FontSize="14"/>
        </Border>

        <!-- СПЛИТТЕР -->
        <GridSplitter Grid.Column="1"
                      Width="6"
                      HorizontalAlignment="Center"
                      ResizeBehavior="PreviousAndNext"
                      Background="#DDD"/>

        <!-- ПРАВАЯ ПАНЕЛЬ -->
        <StackPanel Grid.Column="2" Margin="10" VerticalAlignment="Top">

            <!-- ROOT -->
            <TextBlock Text="Корневой объект"
                       FontWeight="Bold"
                       Margin="0 0 0 4"/>

            <TextBox x:Name="TextBoxRoot"
         Height="28"
         FontSize="14"
         Margin="0 0 0 8"/>


            <Button x:Name="ButtonSetRoot"
                    Content="Создать корень"
                    Height="32"
                    Margin="0 0 0 12"
                    Click="ButtonSetRoot_Click"/>

            <Separator Margin="0 0 0 12"/>

            <!-- ADD -->
            <TextBlock Text="Добавить объект"
                       FontWeight="Bold"
                       Margin="0 0 0 4"/>

            <!-- Watermark через Tag -->
            <TextBox x:Name="TextBoxParent"
         Height="28"
         FontSize="14"
         Margin="0 0 0 6"
         Tag="Имя родителя"
         Style="{StaticResource WatermarkTextBox}"/>

<TextBox x:Name="TextBoxChild"
         Height="28"
         FontSize="14"
         Margin="0 0 0 6"
         Tag="Новый объект"
         Style="{StaticResource WatermarkTextBox}"/>


            <Button x:Name="ButtonAdd"
                    Content="Добавить"
                    Height="32"
                    Margin="0 0 0 12"
                    IsEnabled="True"
                    Click="ButtonAdd_Click"/>

            <Separator Margin="0 0 0 12"/>

            <!-- DELETE -->
            <TextBlock Text="Удаление"
                       FontWeight="Bold"
                       Margin="0 0 0 6"/>

            <Button x:Name="ButtonDelete"
                    Content="Удалить выбранный"
                    Height="32"
                    IsEnabled="False"
                    Click="ButtonDelete_Click"/>

        </StackPanel>

    </Grid>
</Window>
